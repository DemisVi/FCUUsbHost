{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build", "--no-restore",
                "${workspaceFolder}/FCUUsbHost.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                // "--no-restore",
                "${workspaceFolder}/FCUUsbHost.csproj",
                "--sc=false",
                "/property:Configuration=Release",
                "/property:GenerateRuntimeConfigurationFiles=true",
                "/property:PublishSingleFile=true",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign",
                "/property:OutDir=${workspaceFolder}/../../FCUUsbService"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/FCUUsbHost.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}